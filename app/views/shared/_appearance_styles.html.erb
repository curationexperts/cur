<%# Include the original Hyrax version of this partial to pull in Hyrax dynamic styles %>
<%= render(file: File.join(Hyrax::Engine.root, 'app','views','shared','_appearance_styles')) %>

<%# Styling for tenejo themed pages %>
<%# TODO: break out static settings into app/assets/stylesheets/themes.scss %>

<%# Font expierment %>
  <link rel="preconnect" href="https://fonts.googleapis.com"> <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Truculenta&display=swap" rel="stylesheet">

      <% theme = Theme.current_theme %>
      <style>
        #homepage-preview {
          color: <%= theme&.primary_text_color %>;
        }

        .preview-header {
          background-color: <%= theme&.primary_color %>;
          color: <%= theme&.accent_text_color %>;
          border-radius: 0.5em 0.5em 0 0;
        }

        .preview-body {
          background-color: <%= theme&.background_color %>
          ;
        }
        .preview-body h1 {
          font-size: 1.5em;
          margin-top: 0;
          color: <%= theme&.accent_color %>;
        }
        .preview-body a {
          color: <%= theme&.accent_color %>;
        }

        .preview-footer {
          background-color: <%= theme&.primary_color %>;
          color: <%= theme&.accent_text_color %>;
          border-radius: 0 0 0.5em 0.5em;
        }


        .preview-navbar-header {
          width: 100%;
          background-color: <%= theme&.accent_color %>
        }
        .preview-navbar-header .btn-primary {
          background-color: <%= theme&.primary_color %>
          ;
          border-color: <%= theme&.primary_color %>
          ;
        }

        .preview-site-title {
          float: left;
          line-height: 3em;
          /* font-weight: bold; */
        }
        .preview-navbar-header ul {
          list-style-type: none;
          margin: 0;
          padding: 0;
        }

        .preview-navbar-header ul li {
          padding: 1em 0.5em;
        }

        .navbar-form .input-group {
          margin-bottom: 0;
          margin-right: 1rem;
        }
        .preview-facets .top-panel-heading {
          padding: 0;
        }
        .preview-facets .panel-title{
            font-size: 1.1em !important;
            font-weight: 500 !important;
            line-height: 1 !important;
        }
        .preview-facets .panel-heading.collapse-toggle .panel-title:after{
            color: <%= theme&.accent_color %>;
        }

        /* / Homepage Styles / */
        body{
          background-color: <%= theme&.background_color %> !important;
        }

        .navbar-inverse .navbar-nav > li > a, 
        .navbar-inverse .navbar-text, 
        .navbar-inverse .navbar-brand{
          color: <%= theme&.accent_text_color %> !important;
        }
        .navbar-default{
          background-color: <%= theme&.accent_color %> !important;
          border: none;
          color: <%= theme&.accent_text_color %> !important;
        }

        .navbar-default .navbar-nav li a{
          color: <%= theme&.accent_text_color %> !important;
        }
        .navbar-default .navbar-nav > .active > a,
        .navbar-default .navbar-nav > .active > a:hover, 
        .navbar-default .navbar-nav > .active > a:focus{
          color: <%= theme&.accent_text_color %> !important;
          background-color: <%= theme&.accent_color %>;
          filter: brightness(90%);
        }
        .navbar-default .navbar-nav > li > a:hover, 
        .navbar-default .navbar-nav > li > a:focus,{
          color: <%= theme&.primary_text_color %>;
          background-color: <%= theme&.accent_color %>;
          filter: brightness(95%);
        }

        .pagination > .active > a, 
        .pagination > .active > a:hover, 
        .pagination > .active > a:focus, 
        .pagination > .active > span, 
        .pagination > .active > span:hover, 
        .pagination > .active > span:focus{
          color: <%= theme&.accent_text_color %>;
          background-color: <%= theme&.accent_color %>;
          filter: brightness(95%);
          border-color: <%= theme&.accent_color %>;
        }

        .home-content h2,
        .card a:hover, 
        .card a:focus{
          color: <%= theme&.accent_color %> !important;
        }
        .card figcaption h2{
          color: <%= theme&.accent_color %> !important;
        }
        .search-result-wrapper a,
        .page_links a,
        .panel-title > a, 
        .panel-title > small, 
        .panel-title > .small, 
        .panel-title > small > a, 
        .panel-title > .small > a,
        .panel-heading.collapse-toggle .panel-title:after, 
        nav.breadcrumb ol li a,
        .pagination a,
        .attribute a{
          color: <%= theme&.accent_color %> !important;
        }

      </style>
