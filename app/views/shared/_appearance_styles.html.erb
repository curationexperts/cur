      <% theme = Theme.current_theme %>
      <style>
        #homepage-preview {
          color: <%= theme&.preview_primary_text_color %>
          ;
        }

        .preview-header {
          background-color: <%= theme&.preview_primary_color %>
          ;
          color: <%= contrasting_text_color(theme&.preview_primary_color) %>
          ;
          border-radius: 0.5em 0.5em 0 0;
        }

        .preview-body {
          background-color: <%= theme&.preview_background_color %>
          ;
        }
        .preview-body h1 {
          font-size: 1.5em;
          margin-top: 0;
          color: <%= theme&.preview_accent_text_color %>
          ;
        }
        #homepage-preview .preview-body h3 a,
        #homepage-preview .preview-body a {
          color: <%= theme&.preview_accent_text_color %>
          !important;
        }

        .preview-footer {
          background-color: <%= theme&.preview_primary_color %>
          ;
          color: <%= contrasting_text_color(theme&.preview_primary_color) %>
          ;
          border-radius: 0 0 0.5em 0.5em;
        }


        .preview-navbar-header {
          width: 100%;
          background-color: <%= theme&.preview_accent_color %>
          ;
          color: <%= contrasting_text_color(theme&.preview_accent_color) %>
          ;
        }

        .preview-navbar-header .btn-primary {
          background-color: <%= theme&.preview_primary_color %>
          ;
          border-color: <%= theme&.preview_primary_color %>
          ;
        }

        .preview-site-title {
          float: left;
          line-height: 3em;
          font-weight: bold;
          opacity: 0.8;
        }

        .preview-navbar-header ul {
          list-style-type: none;
          margin: 0;
          padding: 0;
        }

        .preview-navbar-header ul li {
          padding: 1em 0.5em;
        }

        .navbar-form .input-group {
          margin-bottom: 0;
          margin-right: 1rem;
        }
        .preview-facets .top-panel-heading {
          padding: 0;
        }
        .preview-facets .panel-title {
          font-size: 1.1em !important;
          font-weight: 500 !important;
          line-height: 1 !important;
        }
        .preview-facets .panel-heading.collapse-toggle .panel-title:after {
          color: <%= theme&.preview_accent_text_color %>
          !important;
        }

        .preview-navbar-header .btn-primary.btn {
          color: <%= contrasting_text_color(theme&.preview_primary_color) %> !important;
        }

        /* / Homepage Styles / */
        body {
          background-color: <%= theme&.background_color %>
          !important;
        }
        .navbar-inverse .navbar-toggle,
        .navbar-inverse .facets-toggle {
          border-color: <%= theme&.accent_color %>
          !important;
        }
        .navbar-inverse .navbar-toggle:focus,
        .navbar-inverse .facets-toggle:focus,
        .navbar-inverse .navbar-toggle:hover,
        .navbar-inverse .facets-toggle:hover {
          background-color: <%= theme&.accent_color %>
          !important;
        }
        .navbar-inverse .navbar-toggle .icon-bar,
        .navbar-inverse .facets-toggle .icon-bar {
          background-color: <%= theme&.accent_color %>
          !important;
        }
        .navbar-inverse .navbar-toggle:focus .icon-bar,
        .navbar-inverse .facets-toggle:focus .icon-bar,
        .navbar-inverse .navbar-toggle:hover .icon-bar,
        .navbar-inverse .facets-toggle:hover .icon-bar {
          background-color: <%= contrasting_text_color(theme&.accent_color) %>
          !important;
        }
        .navbar-inverse {
          color: <%= contrasting_text_color(theme&.primary_color) %>
          !important;
          background-color: <%= theme&.primary_color %>
          !important;
          border: none;

        }
        .navbar-inverse .navbar-nav > li > a,
        .navbar-inverse .navbar-text,
        .navbar-inverse .navbar-brand {
          color: <%= contrasting_text_color(theme&.primary_color) %>
          !important;

        }
        .navbar-default {
          background-color: <%= theme&.accent_color %>
          !important;
          border: none;
          color: <%= contrasting_text_color(theme&.accent_color) %>
          !important;
        }
        .edit_collection .btn-primary,
        .navbar-default .navbar-right .btn-primary {
          background-color: <%= theme&.primary_color%> !important;
          border-color: transparent;
            color: <%= contrasting_text_color(theme&.primary_color) %> !important;
          

        }
        .navbar-default .navbar-nav li a {
          color: <%= contrasting_text_color(theme&.accent_text_color) %>
          !important;
        }
        .navbar-default .navbar-nav > .active > a,
        .navbar-default .navbar-nav > .active > a:hover,
        .navbar-default .navbar-nav > .active > a:focus {
          color: <%= contrasting_text_color(theme&.accent_color) %>
          !important;
          background-color: <%= darken_color(theme&.accent_color, 0.75) %>
          ;

        }
        .navbar-default .navbar-nav > li > a:hover,
        .navbar-default .navbar-nav > li > a:focus {
          color: <%= contrasting_text_color(theme&.accent_text_color) %>
          !important;
          background-color: <%= darken_color(theme&.accent_color, 0.75) %>
          !important;
        }

        .pagination > .active > a,
        .pagination > .active > a:hover,
        .pagination > .active > a:focus,
        .pagination > .active > span,
        .pagination > .active > span:hover,
        .pagination > .active > span:focus {
          color: <%= contrasting_text_color(theme&.accent_color) %>
          ;
          background-color: <%= darken_color(theme&.accent_color, 0.95) %>
          ;
          border-color: <%= darken_color(theme&.accent_color, 0.95) %>
          ;
        }
        #sort-dropdown .dropdown-toggle,
        #per_page-dropdown .dropdown-toggle {
          color: <%= theme&.accent_color %>
        }
        .work-title-wrapper .title-with-badges h1,
        .work-title-wrapper .title-with-badges h2,
        .work-title-wrapper .title-with-badges .modal-title {
          color: <%= theme&.accent_color %>
          !important;
        }

        .home-content h2,
        .card a:hover,
        .card a:focus {
          color: <%= theme&.accent_color %>
          !important;
        }
        .card figcaption h2 {
          color: <%= theme&.accent_color %>
          !important;
        }
        .search-result-wrapper a,
        .page_links a,
        .panel-title > a,
        .panel-title > small,
        .panel-title > .small,
        .panel-title > small > a,
        .panel-title > .small > a,
        .panel-heading.collapse-toggle .panel-title:after,
        nav.breadcrumb ol li a,
        .pagination a,
        .attribute a {
          color: <%= theme&.accent_color %>
          !important;
        }
      </style>
