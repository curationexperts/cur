<h1>New Job</h1>

<div class="card card--job">
  <div class="card-body">
    <p>Please choose a job type:</p>

    <ul>
      <% Job.subclasses.each do |job_type| %>
        <li><%= link_to "New #{job_type.name}", "/#{job_type.name.downcase.pluralize}/new" %></li>
      <% end %>
    </ul>
  </div>
</div>
