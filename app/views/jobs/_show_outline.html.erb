<div class="card card--job">
  <div class="card-body">
    <table class="table table-responsive table--job">
      <thead>
        <th class="title">Title /
          <em>Filename</em>
        </th>
        <th class="item_status">Status</th>
        <th class="identifier">Identifier</th>
        <th class="lineno">Row</th>
        <th class="index">Order</th>
        <th class="type">Type</th>
        <th class="visibility">Visibility</th>
        <th class="collection_count" title="Collections">CS</th>
        <th class="work_count" title="Works">WS</th>
        <th class="file_count" title="Files">FS</th>
      </thead>
      <tbody></tbody>
    </table>
    <% @root.dig('children')&.each do |child| %>
      <%= render "jobs/child", node: child, parent: "0", depth: 0, order: nil %>
    <% end %>
  </div>
</div>