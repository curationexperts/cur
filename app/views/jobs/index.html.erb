<p id="notice"><%= notice %></p>

<div class="col-xs-10 main-header">
  <h1>
    <span class="fa fa-cogs"></span>Jobs</h1>
  <div class="pull-right"><%= link_to 'New Job', new_job_path, class: 'btn btn-primary' %></div>

</div>

<div class="row">
  <div class="col-xs-10">
    <div class="panel panel-default">
      <div class="panel-body">
        <table id="jobs-index" class="table table-responsive table-striped">
          <thead>

            <tr>
              <th>ID</th>
              <th>Type</th>
              <th width="33%">Filename</th>
              <th>User</th>
              <th>Status</th>
              <th width="15%">Completed at</th>
              <th width="10%" data-orderable="false" title="Collections | Works | Files">CS | WS | FS</th>
              <th data-orderable="false">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @jobs.each do |job| %>
              <tr>
                <td><%= link_to job.id, job, 'aria-label': "Show Job ##{job.id} - #{job.type}" %></td>
                <td><%= job.type %></td>
                <td>
                  <% if job&.try(:manifest)&.attached? %>
                    <%= job&.manifest.filename %>
                  <% else %>
                    --
                  <% end %>
                </td>
                <td><%= job.user %></td>
                <td>
                  <%= status_span_generator(job.status) %>
                </td>
                <td><%= job.completed_at %></td>
                <td>
                  <%= job.collections || raw("&ndash;") %>
                  |
                  <%= job.works || raw("&ndash;") %>
                  |
                  <%= job.files || raw("&ndash;") %>
                </td>
                <td><%= link_to 'Show', job, 'aria-label': "Show Job ##{job.id} - #{job.type}" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<script>
  var dataTable = $('#jobs-index').DataTable({
    "pageLength": 25,
    order: [
      [0, 'desc']
    ]
  });
  document.addEventListener("turbolinks:before-cache", function () {
    if (dataTable !== null) {
      dataTable.destroy();
      dataTable = null;
    }
  });
</script>
