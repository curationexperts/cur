<h2><%= t('role-management.new.title') %></h2>

<%= bootstrap_form_for @role, url: role_management.roles_path do |f| %>
  <%= f.text_field :name, label: t('role-management.new.field_name') %>
  <%= f.submit t('role-management.new.add'), class: "btn btn-primary" %>
  <%= link_to t('role-management.new.cancel'), hyrax.admin_users_path(anchor: "roles"), class: 'btn btn-default' %>
<% end %>
