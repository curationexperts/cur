<h2><%= t('hyrax.homepage.admin_sets.title') %></h2>
<div class="cards">
  <% if @featured_work_list.empty? %>
    <div class="card">
      <p><%= t('hyrax.homepage.featured_works.no_works') %></p>
    </div>
  <% else %>
    <% 7.times do %>
      <%= render partial: 'featured', collection: @featured_work_list.featured_works %>
    <% end %>
  <% end %>
</div>

<style>
  .cards {
    max-width: 1170px;
    margin: 0 auto 2rem;
    display: grid;
    grid-gap: 1rem 2rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-template-rows: 240px;
  }
  .card {

    color: #344055;

    /* box-shadow: 0 0 10px rgba(0, 0, 0, 0.315); */
    background: rgba(255, 255, 255, 0.90);
    /* text-align: center; */

    overflow: hidden;
    padding: 0;
    /* min-height: 4rem; */
    height: 240px; 
    margin: 0 auto;

  }
  .card img {
    /* max-width: 320px; */
    /* max-height: 240px; */
    padding: 0;
    margin: 0;
    /* border-radius: 5px; */
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .card h3 {
    color: #334454;
    font-size: 1.5rem;
    line-height: 3rem;
    margin: 1rem 0;
    padding: 0 1rem;
  }
</style>
