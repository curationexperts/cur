<div class="row">
  <div class="col-xs-12 col-lg-10">
    <div class="card card--job">
      <h2 class="card-header">
        Job #<%= @job&.id %>
        - Exports
        <%= status_span_generator(@job&.status) %>
      </h2>

      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <div class="row">
              <dl class="col-md-4">
                <dt>User</dt>
                <dd><%= @job&.user %></dd>
              </dl>
              <dl class="col-md-4">
                <dt>Submitted At</dt>
                <dd><%= @job&.created_at %></dd>
              </dl>
              <dl class="col-md-4">
                <dt>Completed at</dt>

                <dd><%= @job&.completed_at || raw("&ndash;") %></dd>

                <dd></dd>
              </dl>
            </div>
            <div class="row">
              <dl class="col-md-12 filename">
                <dt>File</dt>
                <dd>
                  <% if @job&.manifest&.attached? %>
                    <%=
							link_to(@job.manifest.filename, rails_blob_path(@job.manifest,
							disposition: 'attachment')) %>
                    <span class="fa fa-download"></span>
                  <% else %>
                    &ndash;
                  <% end %>
                </dd>
              </dl>
            </div>
          </div>
          <div class="col-md-4">
            <div class="row">
              <dl class="col-xs-4">
                <dt>Collections</dt>
                <dd class="job-number"><%= @job&.collections.nil? || raw("&ndash;") %></dd>
              </dl>
              <dl class="col-xs-4">
                <dt>Works</dt>
                <dd class="job-number"><%= @job&.works.nil? || raw("&ndash;") %></dd>
              </dl>
              <dl class="col-xs-4">
                <dt>Files</dt>
                <dd class="job-number"><%= @job&.files.nil? || raw("&ndash;") %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
